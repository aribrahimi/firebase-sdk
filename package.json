{
  "name": "@kaayan/firebase-auth-sdk",
  "version": "1.1.0",
  "description": "Reusable Firebase Auth SDK in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint --ext .ts ./src",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "release:patch": "./version-bump.sh patch",
    "release:minor": "./version-bump.sh minor",
    "release:major": "./version-bump.sh major",
    "publish:npm": "./npm-publish.sh"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "SETUP.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aribrahimi/firebase-auth-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/aribrahimi/firebase-auth-sdk/issues"
  },
  "homepage": "https://github.com/aribrahimi/firebase-auth-sdk#readme",
  "keywords": [
    "firebase",
    "auth",
    "authentication",
    "typescript"
  ],
  "author": "alireza ibrahimi",
  "license": "MIT",
  "dependencies": {
    "firebase": "^10.7.0"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.9.0",
    "@firebase/auth-types": "^0.12.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "firebase": "^10.0.0"
  }
}
